{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["config/**", "models/**", "controllers/**", "middleware/**"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.js"
        }
    ],
    "functions": {
        "app.js": {
            "memory": 3008,
            "maxDuration": 10
        }
    },
    "env": {
        "NODE_ENV": "production"
    }
}